<h1>Update your task</h1>
<%= form_for @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed, "Done" %>
  <%= f.check_box :completed %>
  <%= f.submit :class => "button"%>
<% end %>
<br>
<%= link_to "Back to the list", tasks_path %>
